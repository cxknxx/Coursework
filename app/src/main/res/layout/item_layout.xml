<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_template"
    android:layout_width="fill_parent"
    android:layout_height="180dp"
    android:background="@drawable/border"
    android:paddingStart="80dp"
    >


    <TextView
        android:id="@+id/item_template_location"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/home_item_text"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp" />

    <TextView
        android:id="@+id/item_template_origin_date"
        app:layout_constraintTop_toBottomOf="@+id/item_template_location"
        app:layout_constraintLeft_toLeftOf="@id/item_template_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/home_item_text"/>

    <TextView
        android:id="@+id/item_template_depth"
        app:layout_constraintTop_toBottomOf="@+id/item_template_origin_date"
        app:layout_constraintLeft_toLeftOf="@id/item_template_origin_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/home_item_text"/>

    <TextView
        android:id="@+id/item_template_category"
        app:layout_constraintTop_toBottomOf="@+id/item_template_depth"
        app:layout_constraintLeft_toLeftOf="@id/item_template_depth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/home_item_text" />


    <TextView
        android:id="@+id/item_template_magnitude"
        app:layout_constraintTop_toBottomOf="@+id/item_template_category"
        app:layout_constraintLeft_toLeftOf="@id/item_template_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textColor="@color/home_item_text"/>

    <ImageView
        android:id="@+id/item_template_scale"
        android:layout_width="200dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="@id/item_template_magnitude"
        app:layout_constraintTop_toBottomOf="@id/item_template_magnitude" />

    <TextView
        android:id="@+id/display_more_content"
        app:layout_constraintTop_toBottomOf="@+id/item_template_scale"
        app:layout_constraintLeft_toLeftOf="@id/item_template_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textColor="@color/home_item_text"/>

</android.support.constraint.ConstraintLayout>